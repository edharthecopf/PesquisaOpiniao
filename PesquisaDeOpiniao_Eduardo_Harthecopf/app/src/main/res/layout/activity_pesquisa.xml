<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pesquisa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.fadep.pesquisadeopiniao_eduardo_harthecopf.Act_Pesquisa"
    android:orientation="vertical">


    <TextView
        android:text="Pesquisa de opinião sobre a qualidade de ensino da FADEP - Pato Branco."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>


    <Button
        android:text="Bom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBom"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/btnBom"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ruim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRuim"
        android:layout_marginTop="3dp"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Operação do Sistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRuim"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:textSize="20sp"
        android:id="@+id/textView2" />

    <Button
        android:text="Resultado da Pesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnResultado"
        android:layout_marginTop="3dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Iniciar Pesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnIniciar"
        android:layout_marginTop="3dp"
        android:layout_alignParentStart="true" />

</LinearLayout>
